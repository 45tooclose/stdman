   const;
   std::slice_array<T>    operator[]( std::slice slicearr );         \fB(4)\fP
   std::valarray<T>       operator[]( const std::gslice&             \fB(5)\fP
   gslicearr ) const;
   std::gslice_array<T>   operator[]( const std::gslice&         \fB(1)\fP \fB(6)\fP
