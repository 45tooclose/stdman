.SH Example

   
// Run this code

 #include <iostream>
 #include <new>

 int main()
 {
     try {
         while (true) {
             new int[100000000ul];
         }
     } catch (const std::bad_alloc& e) {
         std::cout << "Allocation failed: " << e.what() << '\\n';
     }
 }

